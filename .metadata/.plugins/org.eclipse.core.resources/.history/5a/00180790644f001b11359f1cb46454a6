package decisao;

import javax.swing.JOptionPane;

public class DesafioDecisãoSimples {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
/*
 * Terá que inputar: nome de uma pessoa e a idade
 * Deverá exibir uma das mensagens:
 * maior que 70 anos, ou igual a 16 ou 17 => "Voto Facultativo"
 * menor de 16 anos "Não vota"
 * se estiver entre 18 e 70 => "Obrigado a votar"
  */
		
		String disciplina = JOptionPane.showInputDialog("Nome:");
		Float idade = Float.parseFloat(JOptionPane.showInputDialog("Digite sua idade"));
		
		if (idade>=70) {
			System.out.println("Voto Facultativo: " + disciplina);
		}
		
		
		
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	}

}
